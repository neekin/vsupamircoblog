<div class="wellopacity">
<%= form_tag "/create_login_session" ,:class=>'form-horizontal' do %>
      <div class="form-group">
     <lable class="col-sm-4 control-label">用户名:</lable>
    <%= text_field_tag :username,params[:username]  ,:class=>'col-sm-6'%>
      </div>
      <div class="form-group">
        <lable class="col-sm-4 control-label">密　码:</lable>
    <%= password_field_tag :password,params[:password],:class=>'col-sm-6'%>
      </div>
      <div class="form-group">
        <div class="col-sm-offset-4 col-sm-4">
          <div class="checkbox">
            <label>
              <%= check_box_tag :rememberme,params[:rememberme]%>记住我
            </label>
          </div>
        </div>
      </div>
      <div class="center">
      <%= submit_tag "登陆" ,:class=>'btn btn-sm btn-primary'%>
      </div>
      <%= link_to "没有账号,请注册", signup_path ,:target=>'_blank' %>
<% end %>
</div>

<% if flash.notice %>
    <div class="notice"><%= flash.notice %></div>
<% end %>


<script>
    var hideNotice = function(){
                     $(".notice").fadeOut("slow");
                 }
            setTimeout(hideNotice, 2000);
</script>